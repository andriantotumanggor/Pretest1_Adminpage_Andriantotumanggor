<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Admin Toko</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <i class="bi bi-shop"></i> Admin Toko Retail
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link <%= activePage == 'dashboard' ? 'active' : '' %>" href="/">
                            <i class="bi bi-speedometer2"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= activePage == 'produk' ? 'active' : '' %>" href="/produk">
                            <i class="bi bi-box"></i> Produk
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= activePage == 'stock' ? 'active' : '' %>" href="/stock">
                            <i class="bi bi-clipboard-data"></i> Stock
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= activePage == 'pembelian' ? 'active' : '' %>" href="/pembelian">
                            <i class="bi bi-cart"></i> Pembelian
                        </a>
                    </li>
                </ul>
                <div class="navbar-nav ms-auto">
                    <span class="nav-text text-light me-3">
                        <i class="bi bi-person-circle"></i> Admin
                    </span>
                </div>
            </div>
        </div>
    </nav>

    <div class="container-fluid mt-4">
        <div class="row">
            <main class="col-md-12">
                <% if (typeof message !== 'undefined' && message) { %>
                    <div class="alert alert-info alert-dismissible fade show">
                        <%= message %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>
                
                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="alert alert-danger alert-dismissible fade show">
                        <%= error %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>
                
                <%- body %>
            </main>
        </div>
    </div>

    <footer class="footer mt-5 py-3 bg-light">
        <div class="container text-center">
            <span class="text-muted">Â© 2024 Admin Toko Retail - Sistem Manajemen Pembelian</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/script.js"></script>
</body>
</html>