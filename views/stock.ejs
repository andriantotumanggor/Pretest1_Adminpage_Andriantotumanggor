<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1><i class="bi bi-clipboard-data"></i> Management Stock</h1>
        <p class="text-muted">Monitor dan kelola stock produk</p>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Produk</th>
                        <th>Stock Awal</th>
                        <th>Stock Masuk</th>
                        <th>Stock Keluar</th>
                        <th>Stock Akhir</th>
                        <th>Status</th>
                        <th>Update Terakhir</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (stock.length === 0) { %>
                        <tr>
                            <td colspan="7" class="text-center">Tidak ada data stock</td>
                        </tr>
                    <% } %>
                    
                    <% stock.forEach(function(item) { %>
                        <tr>
                            <td>
                                <div><strong><%= item.nama_produk %></strong></div>
                                <small class="text-muted"><%= item.kode_produk %></small>
                            </td>
                            <td><%= item.stock_awal %></td>
                            <td>
                                <span class="badge bg-success">+<%= item.stock_masuk %></span>
                            </td>
                            <td>
                                <span class="badge bg-danger">-<%= item.stock_keluar %></span>
                            </td>
                            <td>
                                <span class="badge 
                                    <%= item.stock_akhir > 20 ? 'bg-success' : 
                                       item.stock_akhir > 5 ? 'bg-warning' : 'bg-danger' %>">
                                    <strong><%= item.stock_akhir %></strong>
                                </span>
                            </td>
                            <td>
                                <% if (item.stock_akhir > 20) { %>
                                    <span class="badge bg-success">Aman</span>
                                <% } else if (item.stock_akhir > 5) { %>
                                    <span class="badge bg-warning">Perlu Restock</span>
                                <% } else { %>
                                    <span class="badge bg-danger">Stok Habis</span>
                                <% } %>
                            </td>
                            <td><%= new Date(item.tanggal_update).toLocaleDateString('id-ID') %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</div>